#!/bin/bash
set -e

FORCE=false

# Parse arguments
while [[ $# -gt 0 ]]; do
  case $1 in
    --force)
      FORCE=true
      shift
      ;;
    *)
      shift
      ;;
  esac
done

echo "ðŸ”  Checking for existing linting config files..."

STUBS_DIR="vendor/programic/php-linting-rules/stubs"

copy_if_missing() {
  local filename=$1
  local dest=$2

  local src="${STUBS_DIR}/${filename}"

  if [ -f "$dest" ]; then
    if [ "$FORCE" = true ]; then
      echo "âš ï¸  $dest already exists. Forcing overwrite..."
      cp "$src" "$dest"
      echo "âœ…  Overwritten $src -> $dest"
    else
      echo "âš ï¸  $dest already exists. Skipping..."
    fi
  else
    cp "$src" "$dest"
    echo "âœ… Copied $src -> $dest"
  fi
}

copy_if_missing "phpstan.neon.dist" "phpstan.neon"
copy_if_missing "tlint.json.dist" "tlint.json"
copy_if_missing "phpmd.xml.dist" "phpmd.xml"

